@using PruebaTec.Models.ViewModels
@model RegistroViewModel
@if (TempData["CorreoRegistrado"] != null)
{
    <div class="alert alert-warning">@TempData["CorreoRegistrado"]</div>
}
@{
    Layout = null;
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <p class="navbar-brand" >PruebaTec</p>
            </div>
        </nav>
    </header>
<div class="container mt-5">
    <h1>Regístrate</h1>
    <form asp-action="RegistrarUsuario" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="nombre" class="control-label">Nombre de Usuario:</label>
            <input asp-for="nombre" class="form-control" placeholder="Nombre de Usuario" />
            <span asp-validation-for="nombre" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="correo" class="control-label">Correo electrónico:</label>
            <input asp-for="correo" class="form-control" placeholder="Correo electrónico" />
            <span asp-validation-for="correo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="contrasena" class="control-label">Contraseña:</label>
            <input asp-for="contrasena" class="form-control" placeholder="Contraseña" type="password" />
            <span asp-validation-for="contrasena" class="text-danger"></span>

        </div>
            <button type="submit" class="btn btn-primary mt-2">Registrarse</button>
    </form>
    <p>tienes una cuenta ? <a asp-action="IniciarSesion">Inicia sesion</a></p>
</div>
</body>
@section Scripts{
    @{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
        }